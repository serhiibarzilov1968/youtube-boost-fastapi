worker_processes 1;
daemon off;

events {
    worker_connections 1024;
}

http {
    include mime.types;
    default_type application/octet-stream;
    sendfile on;
    keepalive_timeout 65;

    server {
        listen <%= ENV["PORT"] %>;
        server_name _;

        root /app/frontend; # Указываем, что корень статики находится в папке frontend

        location / {
            try_files $uri $uri/ /index.html; # Перенаправляем все запросы на index.html (для SPA )
        }
    }
}
